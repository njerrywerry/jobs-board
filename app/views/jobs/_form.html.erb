<%= simple_form_for @job, html: {class: 'form-horizontal'} do |form| %>
  <%= form.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category"} %>
  <%= form.input :title, label: "Job title", input_html: {class: 'form-horizontal'} %>
  <%= form.input :company, label: "Your company", input_html: {class: 'form-horizontal'} %>
  <%= form.input :url, label: "Link to job", input_html: {class: 'form-horizontal'} %>
  <br>
  <%= form.button :submit %>
  <% end %>
